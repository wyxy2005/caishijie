<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F5F5F5"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:text="分享到"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#DADADA" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <LinearLayout
                android:id="@+id/ly_share_weichat"

                style="@style/dialog_content_share_ll">

                <ImageView
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:background="@drawable/share_icon_wechat" />

                <TextView
                    style="@style/dialog_content_share_text"
                    android:text="微信好友" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ly_share_weichat_circle"
                style="@style/dialog_content_share_ll">

                <ImageView
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:background="@drawable/share_icon_wechatfriends" />

                <TextView
                    style="@style/dialog_content_share_text"
                    android:text="朋友圈" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ly_share_qq"
                style="@style/dialog_content_share_ll">

                <ImageView
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:background="@drawable/share_icon_qq_a" />

                <TextView
                    style="@style/dialog_content_share_text"
                    android:text="QQ好友" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ly_share_qq_zone"
                style="@style/dialog_content_share_ll">

                <ImageView
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:background="@drawable/share_icon_qq_a" />

                <TextView
                    style="@style/dialog_content_share_text"
                    android:text="QQ空间" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ly_share_sina_weibo"
                style="@style/dialog_content_share_ll">

                <ImageView
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:background="@drawable/share_icon_sinaweibo" />

                <TextView
                    style="@style/dialog_content_share_text"
                    android:text="新浪微博" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/ly_share_copy_link"
                style="@style/dialog_content_share_ll">

                <ImageView
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:background="@drawable/share_icon_copy" />

                <TextView
                    style="@style/dialog_content_share_text"
                    android:text="复制链接" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ly_share_more_option"
                style="@style/dialog_content_share_ll">

                <ImageView
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:background="@drawable/share_icon_more" />
                <TextView
                    style="@style/dialog_content_share_text"
                    android:text="更多" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_cancel_share"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/share_cancel_btn_selector"
            android:clickable="true"
            android:gravity="center"
            android:text="取消分享"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>